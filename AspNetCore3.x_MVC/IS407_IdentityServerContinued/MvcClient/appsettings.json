{
    "Application": {
        "LogRequestBody": true,
        "LogResponseBody": true
    },
    "Serilog": {
        "MinimumLevel": "Debug",
        "WriteTo": [
            {
                "Name": "MSSqlServer",
                "Args": {
                    "connectionString": "Data Source=(local);Initial Catalog=IdentityLogging;Integrated Security=true;Application Name=IdentityServer;Encrypt=true;TrustServerCertificate=True;",
                    "tableName": "MvcClient",
                    "schemaName": "dbo",
                    "autoCreateSqlTable": true,
                    "columnOptionsSection": {
                        "disableTriggers": true,
                        "clusteredColumnstoreIndex": false,
                        "primaryKeyColumnName": "Id",
                        "addStandardColumns": [ "LogEvent" ],
                        "removeStandardColumns": [ "Properties" ],
                        "additionalColumns": [
                            {
                                "ColumnName": "UserName",
                                "DataType": "nvarchar",
                                "DataLength": 200,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "IP",
                                "DataType": "varchar",
                                "DataLength": 50,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "UserAgent",
                                "DataType": "varchar",
                                "DataLength": -1,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "ApplicationName",
                                "DataType": "varchar",
                                "DataLength": 50,
                                "AllowNull": false
                            },
                            {
                                "ColumnName": "RequestBody",
                                "DataType": "varchar",
                                "DataLength": -1,
                                "AllowNull": true
                            },
                            {
                                "ColumnName": "ResponseBody",
                                "DataType": "varchar",
                                "DataLength": -1,
                                "AllowNull": true
                            }
                        ],
                        "id": { "nonClusteredIndex": true },
                        "level": {
                            "columnName": "Severity",
                            "storeAsEnum": false
                        },
                        "timeStamp": {
                            "columnName": "Timestamp",
                            "convertToUtc": true
                        },
                        "message": { "columnName": "Msg" },
                        "exception": { "columnName": "Ex" },
                        "messageTemplate": { "columnName": "Template" }
                    }
                }
            }
        ]
    },
    "AllowedHosts": "*"
}
